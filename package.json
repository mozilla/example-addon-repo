{
  "name": "example-addon-repo",
  "version": "0.0.1",
  "description": "Example add-on repository",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:mozilla/example-addon-repo.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla/example-addon-repo/issues"
  },
  "engines": {
    "firefox": ">=48.0a1",
    "fennec": ">=48.0a1"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "3.5.0",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-mocha": "4.5.1",
    "eslint-plugin-promise": "2.0.1",
    "fs-promise": "0.5.0",
    "fx-runner": "1.0.5",
    "geckodriver": "1.1.2",
    "jpm": "1.1.4",
    "mocha": "3.0.2",
    "npm-run-all": "3.1.0",
    "selenium-webdriver": "3.0.0-beta-2"
  },
  "permissions": {
    "multiprocess": true
  },
  "preferences": [
    {
      "name": "buttonUrl",
      "title": "Web page url",
      "description": "The web page url to open when button is clicked",
      "type": "string",
      "value": "https://www.mozilla.org/"
    }
  ],
  "scripts": {
    "bundle": "jpm xpi",
    "test": "npm-run-all test:*",
    "test:lint": "eslint --ext=.js,.json .",
    "test:func": "export FIREFOX_BINARY=${FIREFOX_BINARY:-nightly} && npm run bundle && XPI_NAME=example-addon-repo.xpi mocha test/functional/",
    "firefox": "jpm run -b ${FIREFOX_BINARY:-nightly}"
  },
  "license": "MPL-2.0",
  "keywords": [
    "jetpack"
  ]
}
